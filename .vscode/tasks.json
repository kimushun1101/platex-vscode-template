{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "convert a image file into the eps format",
      "type": "shell",
      "command": "./scripts/convert_into_eps.bash ${input:image_file}",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "delete Zone.Identifier",
      "type": "shell",
      "command": "find . -name '*:Zone.Identifier' -type f -delete",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "image_file",
      "type": "command",
      "command": "shellCommand.execute",
      "args": {
        "command": "find fig -type f \\( -name \"*.pdf\" -o -name \"*.svg\" -o -name \"*.jpeg\" -o -name \"*.png\" \\)",
          "cwd": "${workspaceFolder}",
          "env": {
              "WORKSPACE": "${workspaceFolder[0]}",
              "FILE": "${file}",
              "PROJECT": "${workspaceFolderBasename}"
          }
      }, 
    }
  ]
}
